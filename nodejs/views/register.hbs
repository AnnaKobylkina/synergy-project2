<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<body>
<form action="/auth/register" method="post" class="form-reg">
    <h1>Регистрация</h1>
    <div class="reg">
        <label for="name"></label>
        <input type="text" placeholder="Имя" name="name" id="name" required>

        <label for="lastname"></label>
        <input type="text" placeholder="Фамилия" name="lastname" id="lastname" required>

        <label for="patronymic"></label>
        <input type="text" placeholder="Отчество" name="patronymic" id="patronymic" required>

        <label for="email"></label>
        <input type="email" placeholder="Email" name="email" id="email" required>

        <label for="password"></label>
        <input type="password" placeholder="Пароль" name="password" id="password" required>

        <label for="passwordConfirm"></label>
        <input type="password" placeholder="Повторите пароль" name="passwordConfirm" id="passwordConfirm" required>

        <h2>Паспортные данные:</h2>
        <label for="series"></label>
        <input type="text" placeholder="Серия" name="series" id="series" required>

        <label for="number"></label>
        <input type="text" placeholder="Номер" name="number" id="number" required>
        <button type="submit" class="btn-2">Зарегистрироваться</button>
        <a href="/login">Уже есть аккаунт?</a>
    </div>

</form>
<div class="error">
    {{#if message }}
        <h4>{{message}}</h4>
    {{/if}}
</div>
</body>
</html>